@page
@model ResetV7.EditLogTypeModel
@{
    ViewData["Title"] = "Edit Log Type";
}

<h2 class="text-primary">Edit Log Type</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="LogType.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LogType.name"></label>

            </div>
            <div class="col-6">
                <input asp-for="LogType.name" class="form-control" />
            </div>
            <span asp-validation-for="LogType.name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LogType.description"></label>

            </div>
            <div class="col-6">
                <input asp-for="LogType.description" class="form-control" />
            </div>
            <span asp-validation-for="LogType.description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="IndexType" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>

</div>

