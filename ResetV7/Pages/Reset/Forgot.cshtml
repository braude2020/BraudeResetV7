@page
@model ResetV7.ForgotModel
@{
    ViewData["Title"] = "Forgot";
}

<h1>I Forgot my Password</h1>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="ResetLog.ResetID" />
       
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ResetLog.username"></label>
            </div>
            <div class="col-6">
                <input asp-for="ResetLog.username" class="form-control" />
                <span class="text-danger" asp-validation-for="ResetLog.username"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ResetLog.mobile"></label>
            </div>
            <div class="col-6">
                <input asp-for="ResetLog.mobile" class="form-control" />
                <span class="text-danger" asp-validation-for="ResetLog.mobile"></span>
            </div>
        </div>
        @*<div class="form-group row">
                <div class="col-4">
                    <label asp-for="aduser.passwd"></label>
                </div>
                <div class="col-6">
                    <input asp-for="aduser.passwd" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="aduser.email"></label>
                </div>
                <div class="col-6">
                    <input asp-for="aduser.email" class="form-control" name="email" />
                </div>
            </div>*@
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Reset Password" class="btn btn-primary form-control" />
            </div>
            @*<div class="col-3">
                    <a asp-page="Index" class="btn btn-success form-control">Back</a>
                </div>*@
        </div>
    </form>
</div>
@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

